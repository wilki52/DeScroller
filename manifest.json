{
    "manifest_version": 3,
    "name": "de-scroll",
    "description": "reddit unhooker",
    "version": "1.0",
    "permissions":["tabs", "activeTab", "webNavigation", "storage", "webRequest"],

    "content_scripts":[
      {
        "matches":["https://*.reddit.com/*"],
        "js":["src/content_script.js"]

      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "rebbit.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["styles/block.css", "blank.html"],
        "matches": ["https://*.reddit.com/*"]
      }
    ]
    
  }